{
  "manifest_version": 2,
  "name": "Penna",
  "version": "1.0",
  "description": "A simple note-taking extension.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "browser_action": {
    "default_title": "Penna Note Taker"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "penna@example.com",
      "strict_min_version": "42.0"
    }
  }
}
